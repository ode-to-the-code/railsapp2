

<% if session[:user_id] %>
<h1> Hi! </h1>
<h1>Session User ID: <%= session[:user_id] %> </h1>
<% @user = User.find_by_id(session[:user_id])%>
  <h1>User Name: <%= @user.name %></h1>
  <h2>Facebook UID: <%= @user.uid %></h2>
<% else %>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
<% end %>
