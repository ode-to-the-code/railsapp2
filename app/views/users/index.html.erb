<% binding.pry %>
<h1> "Welcome <%#= current_user.name %>"</h1>

<%= link_to "See all Users Created Today?", "users/created_today" %>
<br><br>

<% @users.each do |user| %>
  <br>Name: <%= link_to user.name, user_path(user) %><br><br>
  <% if user.comments.count > 0 %>
  Comments by <%= user.name %>:<br>
  <% user.comments.each do |comment| %>
  <%# binding.pry %>
  <%= link_to comment.title, comment_path(comment) %> <br>
  <% end %>
<% end %>

<% end %>

